INP="$1"
if [ -z "$INP" ]; then
    echo Need input filename
    exit 1
fi
shift

OUT="$1"
if [ -z "$OUT" ]; then
    echo Need output filename
    exit 1
fi
shift

set -x

cd mec-tools && ./mec_repack "../$INP" "../$OUT"

